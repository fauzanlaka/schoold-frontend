# ==============================================
# Application Settings
# ==============================================
VITE_APP_NAME="School Management System"
VITE_APP_VERSION=1.0.0

# ==============================================
# API Configuration
# ==============================================
# Backend API base URL (without trailing slash)
VITE_API_BASE_URL=http://localhost/school-management-system/backend/public/api

# Sanctum CSRF cookie URL (without trailing slash)
VITE_SANCTUM_URL=http://localhost/school-management-system/backend/public/sanctum

# ==============================================
# Environment Mode
# ==============================================
# Options: development, staging, production
VITE_APP_ENV=development

# Enable/disable debug mode (true/false)
VITE_APP_DEBUG=true

# ==============================================
# Feature Flags
# ==============================================
# Enable/disable features as needed
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_EMAIL_VERIFICATION=true
